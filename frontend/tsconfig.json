{
    "include": [
        "src/ts/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "outDir": "",
        "incremental": true,
        "target": "es5",
        "module": "es2020",
        "sourceMap": true,
        "removeComments": false,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "es2020",
            "dom",
            "dom.iterable",
        ],
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "allowJs": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "esModuleInterop": true
    },
}